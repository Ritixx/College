<body>

  <h1>Ritix will predict your rank...</h1>

  <input type="number" id="rank" placeholder="Enter your CRL Rank"><br>
  <input type="text" id="state" placeholder="Enter your State"><br>
  <select id="gender">
    <option value="">Select Gender</option>
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select><br>
  <button onclick="predictCollege()">Predict My NIT</button>

  <div id="result"></div>

  <script>
    function predictCollege() {
      const rank = document.getElementById('rank').value;
      const state = document.getElementById('state').value;
      const gender = document.getElementById('gender').value;
      const resultDiv = document.getElementById('result');

      if (!rank || !state || !gender) {
        resultDiv.innerHTML = "Please fill all fields!";
        return;
      }

      let college = "";

      if (rank <= 1000) {
        college = "NIT Trichy - Computer Science";
      } else if (rank <= 2500) {
        college = "NIT Warangal - Electrical Engineering";
      } else if (rank <= 5000) {
        college = "NIT Surathkal - Mechanical Engineering";
      } else if (rank <= 10000) {
        college = "MNIT Jaipur - Electronics & Communication";
      } else if (rank <= 15000) {
        college = "NIT Calicut - Civil Engineering";
      } else {
        college = "Good NIT like NIT Nagpur, NIT Kurukshetra - Branch depending on availability!";
      }

      resultDiv.innerHTML = `
        <p>Congratulations ${gender} candidate from ${state}!</p>
        <p>Oh Wow! You have got <strong>${college}</strong>!</p>
        <p>Your future is bright! Shine on!</p>
      `;
    }
  </script>

</body>
